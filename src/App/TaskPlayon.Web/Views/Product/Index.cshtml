@model List<TaskPlayon.Application.ViewModel.ProductVm>

<h2>Product List</h2>

<a asp-action="Create" class="btn btn-success mb-3">Create New Product</a>



<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Stock</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
            </tr>
        }
    </tbody>
</table>
