@model TaskPlayon.Application.ViewModel.InvoiceCreateVm

<h2>Invoice Details - #@Model.Id</h2>

<div class="card mb-4 shadow-sm">
    <div class="card-header bg-primary text-white">Customer Info</div>
    <div class="card-body">
        <p><strong>Name:</strong> @Model.CustomerName</p>
        <p><strong>Email:</strong> @Model.CustomerEmail</p>
        <p><strong>Phone:</strong> @Model.CustomerPhone</p>
        <p><strong>Address:</strong> @Model.CustomerAddress</p>
        <p><strong>Date:</strong> @Model.Date.ToString("dd-MMM-yyyy")</p>
    </div>
</div>

<div class="card mb-4 shadow-sm">
    <div class="card-header bg-secondary text-white">Invoice Items</div>
    <div class="card-body p-0">
        <table class="table table-striped mb-0">
            <thead class="table-light">
                <tr>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>@item.Quantity</td>
                        <td>@item.UnitPrice</td>
                        <td>@(item.Quantity* item.UnitPrice)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer text-end">
        <h5>Total Amount: @Model.TotalAmount</h5>
    </div>
</div>

<div class="text-end">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
